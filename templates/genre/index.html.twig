{% extends 'base.html.twig' %}

{% block title %}Genres
{% endblock %}

{% block body %}
	<h1>Genres</h1>
	
		{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-primary float-end" href="{{ path('genre_new') }}">Add</a>
	{% endif %}

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for genre in genres %}
				<tr>
					<td>{{ genre.nom }}</td>
					<td>
						<a class="btn btn-outline-success" href="{{ path('genre_show', {'id': genre.id}) }}">Show</a>
						{% if is_granted('ROLE_ADMIN') %}
							<a class="btn btn-outline-warning" href="{{ path('genre_edit', {'id': genre.id}) }}">Modify</a>
							{{ include('genre/_delete_form.html.twig') }}
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun r√©sultat</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	
{% endblock %}
